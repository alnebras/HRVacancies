@model HRVacancyVM ;

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title text-primary">
            <span class="svg-icon svg-icon-primary me-2 svg-icon-2">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <polygon points="0 0 24 0 24 24 0 24" />
                        <path d="M12,11 C9.790861,11 8,9.209139 8,7 C8,4.790861 9.790861,3 12,3 C14.209139,3 16,4.790861 16,7 C16,9.209139 14.209139,11 12,11 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                        <path d="M3.00065168,20.1992055 C3.38825852,15.4265159 7.26191235,13 11.9833413,13 C16.7712164,13 20.7048837,15.2931929 20.9979143,20.2 C21.0095879,20.3954741 20.9979143,21 20.2466999,21 C16.541124,21 11.0347247,21 3.72750223,21 C3.47671215,21 2.97953825,20.45918 3.00065168,20.1992055 Z" fill="#000000" fill-rule="nonzero" />
                    </g>
                </svg>
            </span>
            الوظائف الشاغرة
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_vacStatus">
                    <span class="svg-icon svg-icon-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="black" />
                            <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="black" />
                        </svg>
                    </span>
                    اضافة  وظيفة شاغرة
                </button>
            </div>
        </div>
    </div>
    <div class="card-body pt-3">
        <div class="table-responsive border border-primary-light">
            <table id="vacRequest" class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-dark fw-bolder bg-light fs-7 text-uppercase gs-0">
                        <th class="min-w-125px ps-4">إسم الوظيفة</th>
                        <th class="min-w-125px ps-4">ملاحظات</th>
                        <th class="text-center min-w-100px pe-2  rounded-end">إجراء</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 fw-bold">
                    @if (Model.HRVacanciesList.Count() > 0)
                    {
                        foreach (var vacancy in Model.HRVacanciesList)
                        {

                            <tr>
                                <td class="d-flex align-items-center ps-4">

                                    <div class="d-flex flex-column">
                                        <span class="text-gray-800 text-hover-primary mb-1">
                                            @vacancy.VacancyTitle
                                        </span>

                                    </div>

                                </td>
                                <td> @vacancy.VacancyDescription</td>

                                <td class="text-center">

                                    <button onclick="EditHRVcancy('@vacancy.VacancyId')" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" title="حالة الإجازة تعديل ">
                                        <span class="svg-icon svg-icon-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                <path opacity="0.3" d="M21.4 8.35303L19.241 10.511L13.485 4.755L15.643 2.59595C16.0248 2.21423 16.5426 1.99988 17.0825 1.99988C17.6224 1.99988 18.1402 2.21423 18.522 2.59595L21.4 5.474C21.7817 5.85581 21.9962 6.37355 21.9962 6.91345C21.9962 7.45335 21.7817 7.97122 21.4 8.35303ZM3.68699 21.932L9.88699 19.865L4.13099 14.109L2.06399 20.309C1.98815 20.5354 1.97703 20.7787 2.03189 21.0111C2.08674 21.2436 2.2054 21.4561 2.37449 21.6248C2.54359 21.7934 2.75641 21.9115 2.989 21.9658C3.22158 22.0201 3.4647 22.0084 3.69099 21.932H3.68699Z" fill="black"></path>
                                                <path d="M5.574 21.3L3.692 21.928C3.46591 22.0032 3.22334 22.0141 2.99144 21.9594C2.75954 21.9046 2.54744 21.7864 2.3789 21.6179C2.21036 21.4495 2.09202 21.2375 2.03711 21.0056C1.9822 20.7737 1.99289 20.5312 2.06799 20.3051L2.696 18.422L5.574 21.3ZM4.13499 14.105L9.891 19.861L19.245 10.507L13.489 4.75098L4.13499 14.105Z" fill="black"></path>
                                            </svg>
                                        </span>
                                    </button>

                                    <button onclick="DeleteHRVcancy('')" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" title="حذف حالة الإجازة">
                                        <span class="svg-icon svg-icon-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="black"></path>
                                                <path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="black"></path>
                                                <path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="black"></path>
                                            </svg>
                                        </span>
                                    </button>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {

                        <tr>
                            <td colspan="5" class="text-center">لايوجد بيانات</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form asp-action="DeleteVacancy" asp-controller="HRVacancy" method="post" id="delete-form">
    <input type="hidden" name="id" id="id" class="deleted-vacancy" />
</form>


@await Html.PartialAsync("_AddHRVcancy.cshtml", new HRVacancyVM{ HRVacanciesList= Model.HRVacanciesList})

@await Html.PartialAsync("_EditHRVcancy.cshtml" , new HRVacancyVM{ HRVacanciesList= Model.HRVacanciesList})

@section Scripts {

    <script>
        function EditHRVcancy(id) {
            var url = "/HRVacancy/EditHRVacancy?id=" + id;

            $('#edit-HRVacancy-form').html('');

            $("#kt_modal_edit-HRVacancy").modal('show');

            $.get(url, function (data) {
                console.log(data);
                $('#edit-HRVacancy-form').html(data);
            });

        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
