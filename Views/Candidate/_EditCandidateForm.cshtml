@model CandidatesDto
@{
    Layout = null;
}


<form class="form" asp-controller="HRRequisition" asp-action="EditHRRequisition" method="post">

    <input type="hidden" asp-for="VacancyCadidateId" />
    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">إسم المرشح</label>
        <input asp-for="CadidateName" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
        <span asp-validation-for="CadidateName" class="form-text text-danger"></span>
    </div>

    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">الإيميل</label>
        <input asp-for="CadidateName" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
        <span asp-validation-for="CadidateName" class="form-text text-danger"></span>

    </div>

    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">رقم الهاتف</label>
        <input asp-for="PhoenNumber" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
        <span asp-validation-for="PhoenNumber" class="form-text text-danger"></span>
    </div>

    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">السيرة الذاتية</label>
        <input type="file" asp-for="CVPath" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
        <span asp-validation-for="CVPath" class="form-text text-danger"></span>
    </div>


    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">الوظيفة الشاغرة</label>

        <select data-val="true" asp-for="VacancyId" class="mySelect2 form-select border-primary">

            @foreach (var item in Model.VacanciesList)
            {
                <option value=@item.VacancyId> @item.VacancyTitle </option>
            }
        </select>

        <span asp-validation-for="VacancyId" class="form-text text-danger"></span>
    </div>

    <div class="fv-row mb-7">
        <label class="required fw-bold fs-6 mb-2">الوظيفة الشاغرة/ الموارد البشرية</label>

        <select asp-for="RequisitionId" class="mySelect2 form-select border-primary">

            @foreach (var item in Model.RequisitionsList)
            {
                <option value=@item.RequisitionId> @item.RequisitionName </option>
            }
        </select>

        <span asp-validation-for="RequisitionId" class="form-text text-danger"></span>
    </div>

    <div class="text-center pt-15">
        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">الغاء</button>
        <button type="submit" class="btn btn-primary" data-kt-users-modal-action="submit">
            <span class="indicator-label">تعديل</span>
        </button>
    </div>
</form>



