@model CandidatesDto

<div class="modal fade" id="kt_modal_add_vacStatus" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder"> اضافة  مرشح لوظيفة </h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15">
                <form class="form" asp-controller="Candidate" asp-action="AddCandidate" method="post" enctype="multipart/form-data">
                    <div class="fv-row mb-7">
                        <label class="required fw-bold fs-6 mb-2">إسم المرشح</label>
                        <input asp-for="CadidateName" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" autofocus />
                        <span asp-validation-for="CadidateName" class="form-text text-danger"></span>
                    </div>

                    <div class="fv-row mb-7">
                        <label class="required fw-bold fs-6 mb-2">الإيميل</label>
                        <input asp-for="Email" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
                        <span asp-validation-for="Email" class="form-text text-danger"></span>

                    </div>

                    <div class="fv-row mb-7">
                        <label class="required fw-bold fs-6 mb-2">رقم الهاتف</label>
                        <input asp-for="PhoenNumber" class="border-primary  form-control   mb-3 mb-lg-0" autocomplete="off" />
                        <span asp-validation-for="PhoenNumber" class="form-text text-danger"></span>
                    </div>

                    <div class="fv-row mb-7">
                        <label asp-for="CVFile" class="required fw-bold fs-6 mb-2">السيرة الذاتية</label>
                        <input asp-for="CVFile" class="border-primary  form-control   mb-3 mb-lg-0" />
                        @*<span asp-validation-for="CVFile" class="form-text text-danger"></span>*@
                    </div>

                    <div class="fv-row mb-7">
                        <label class="required fw-bold fs-6 mb-2">المسمى الوظيفي</label>

                        <select data-val="true" asp-for="VacancyId" class="mySelect2 form-select border-primary">
                            @foreach (var item in Model.VacanciesList)
                            {
                                <option value=@item.VacancyId> @item.VacancyTitle </option>
                            }
                        </select>

                        <span asp-validation-for="VacancyId" class="form-text text-danger"></span>
                        <span id="NameError" class="form-text name-error text-danger"></span>
                    </div>

                    <div class="fv-row mb-7">
                        <label class="required fw-bold fs-6 mb-2">الوظيفة الشاغرة</label>

                        <select data-val="true" asp-for="RequisitionId" class="mySelect2 form-select border-primary">
                            @foreach (var item in Model.RequisitionsList)
                            {
                                <option value=@item.RequisitionId> @item.RequisitionName </option>
                            }
                        </select>

                        <span asp-validation-for="VacancyId" class="form-text text-danger"></span>
                        <span id="NameError" class="form-text name-error text-danger"></span>
                    </div>

                    <div class="text-center pt-15">

                        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">الغاء</button>

                        <button type="submit" class="btn btn-primary" data-kt-users-modal-action="submit">
                            <span class="indicator-label">اضافة</span>
                        </button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script>

    $(document).ready(function () {
        $(".mySelect2").select2({
            allowClear: true,
            minimumResultsForSearch: 2
        });
    });
</script>
}
