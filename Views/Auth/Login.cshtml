@model UserLoginDto

@{
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}


<div class="w-lg-500px rounded mx-auto">
    @Html.AntiForgeryToken()
    @*<input type="hidden" asp-for="NationalId" />*@
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form class="form w-100" asp-controller="Auth" asp-action="login" method="post">
         
        <div class="fv-row mb-10">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" maxlength="10" class="form-control customized-general-font login-inputs" autocomplete="off" aria-required="true"  autofocus placeholder="رقم المستخدم" />

        </div>
        <div class="fv-row mb-10">
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="d-flex align-items-center justify-content-between flex-row">
                <input type="password" asp-for="Password" class="form-control customized-general-font login-inputs" placeholder="كلمة المرور " >

            </div>
        </div>
       
        <div class="text-center">
           
            <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary-login  w-100 mb-5">
                <span class="indicator-label">دخول</span>
                <span class="indicator-progress">
                  الرجاء الإنتظار...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
         
        </div>
       
    </form>
    
</div>
 
